# MongoDB Primary Connection
MONGODB_PRIMARY_URI=mongodb+srv://user:pass@primary-cluster.mongodb.net/
MONGODB_USERS_DB=users
MONGODB_USERS_COLLECTION=profiles
MONGODB_ORDERS_DB=orders
MONGODB_ORDERS_COLLECTION=transactions

# MongoDB Analytics Connection
MONGODB_ANALYTICS_URI=mongodb+srv://user:pass@analytics-cluster.mongodb.net/
MONGODB_ANALYTICS_DB=analytics
MONGODB_ANALYTICS_COLLECTION=metrics

# GCP Configuration
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_BUCKET=your-bucket-name

# Pub/Sub Topics
PUBSUB_USERS_TOPIC=users-stream
PUBSUB_ORDERS_TOPIC=orders-stream
PUBSUB_METRICS_TOPIC=metrics-stream
DEAD_LETTER_TOPIC=dead-letter-queue 